<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayCompareItems">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Header"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:gravity="center|center_vertical"
                android:text="Job Comparison"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jobTitleTXT"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Job Title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/jobTitleTXT2"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Job Title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/companyTXT"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Company"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/companyTXT2"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Company"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cityTXT"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="City"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/cityTXT2"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="City"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/weight4"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="State"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/weight7"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="State"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/costOfLivingTXT"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cost Of Living"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/costOfLivingTXT2"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cost Of Living"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yearlySalaryTxt"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Yearly Salary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/yearlySalaryTxt2"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Yearly Salary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yearlyBonusTXT"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Yearly Bonus"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/yearlyBonusTXT2"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Yearly Bonus"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/weeklyTeleworkTXT"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Weekly Telework"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/weeklyTeleworkTXT2"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Weekly Telework"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/leaveTimeTXT"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Days PTO"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/leaveTimeTXT2"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Days PTO"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/numCompanySharesTXT"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Company Shares"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/numCompanySharesTXT2"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Company Shares"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/listAvailableOffers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="back_to_offers"
                    android:text="Back to Offer List" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mainMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="main_menu"
                    android:text="Main Menu" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>